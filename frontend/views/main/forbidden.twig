<!-- 403 Forbidden — body only -->
<div class="forbidden" role="document" aria-labelledby="f-title">
  <style>
    :root {
      --bg0: #070A12;
      --bg1: #0B1020;
      --text: rgba(255, 255, 255, 0.92);
      --muted: rgba(255, 255, 255, 0.68);
      --border: rgba(255, 255, 255, 0.16);
      --button-start: rgba(145, 130, 255, 0.92);
      --button-end: rgba(78, 190, 255, 0.82);
    }

    * { box-sizing: border-box; }

    .forbidden {
      min-height: 100vh;
      display: grid;
      place-items: center;
      padding: 24px;
      color: var(--text);
      background:
        radial-gradient(1000px 500px at 12% 18%, rgba(140, 92, 255, 0.22), transparent 60%),
        radial-gradient(900px 500px at 85% 20%, rgba(78, 190, 255, 0.18), transparent 60%),
        linear-gradient(180deg, var(--bg0), var(--bg1));
      font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, "Apple Color Emoji", "Segoe UI Emoji";
    }

    .card {
      width: min(520px, 100%);
      padding: clamp(24px, 4vw, 36px);
      border-radius: 20px;
      background: rgba(255, 255, 255, 0.06);
      border: 1px solid var(--border);
      backdrop-filter: blur(8px);
      text-align: center;
    }

    .code {
      margin: 0 0 8px;
      font-size: 14px;
      color: var(--muted);
      letter-spacing: 0.08em;
      text-transform: uppercase;
    }

    h1 {
      margin: 0;
      font-size: clamp(30px, 5vw, 44px);
      line-height: 1.1;
    }

    .sub {
      margin: 14px 0 0;
      font-size: 16px;
      line-height: 1.5;
      color: var(--muted);
    }

    .btn {
      margin-top: 24px;
      display: inline-block;
      padding: 12px 20px;
      border-radius: 12px;
      border: 1px solid rgba(145, 130, 255, 0.5);
      background: linear-gradient(135deg, var(--button-start), var(--button-end));
      color: #0a0c14;
      text-decoration: none;
      font-weight: 700;
      font-size: 14px;
      letter-spacing: 0.02em;
    }
  </style>

  <section class="card" aria-label="403 Forbidden">
    <p class="code">403 Forbidden</p>
    <h1 id="f-title">Доступ запрещён</h1>
    <p class="sub">У вас нет прав для просмотра этой страницы.</p>
    <a class="btn" href="/admin" aria-label="Войти">Login</a>
  </section>
</div>
