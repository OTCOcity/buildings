{% if categories | length > 0 %}
<div class="categories">
    <div class="sidebar_title">{{ MiscFunc.t('app', 'Разделы') }}</div>
    <div class="categories_list">
        <ul>
            {% for category in categories %}
            <li>
                <a href="{{ MiscFunc.urlLang(thread.url) }}?category={{ category.group }}" class="d-flex flex-row align-items-start justfy-content-start">
                    <div>{{ category.group }}</div>
                    <div class="ml-auto">{{ category.cnt }}</div>
                </a>
            </li>
            {% endfor %}
        </ul>

    </div>
</div>
{% endif %}
